#include <stdio.h>
#include <stdlib.h>

struct teams
{
    char a[100];
    long long int play;
    long long int win;
    long long int draw;
    long long int lose;
    long long int ag;
    long long int yg;
    long long int average;
    long long int point;
};
struct teams cur_team[100];

void swap_teams(int j, int i){
    struct teams temp;
    strcpy(temp.a,cur_team[j].a);
    temp.play=cur_team[j].play;
    temp.win= cur_team[j].win;
    temp.draw= cur_team[j].draw;
    temp.lose=cur_team[j].lose;
    temp.ag= cur_team[j].ag;
    temp.yg= cur_team[j].yg;
    temp.average= cur_team[j].average;
    temp.point=cur_team[j].point;
    strcpy(cur_team[j].a,cur_team[i].a);
    cur_team[j].play= cur_team[i].play;
    cur_team[j].win= cur_team[i].win;
    cur_team[j].draw= cur_team[i].draw;
    cur_team[j].lose= cur_team[i].lose;
    cur_team[j].ag= cur_team[i].ag;
    cur_team[j].yg= cur_team[i].yg;
    cur_team[j].average= cur_team[i].average;
    cur_team[j].point=cur_team[i].point;
    strcpy(cur_team[i].a,temp.a);
    cur_team[i].play= temp.play;
    cur_team[i].win= temp.win;
    cur_team[i].draw= temp.draw;
    cur_team[i].lose= temp.lose;
    cur_team[i].ag= temp.ag;
    cur_team[i].yg= temp.yg;
    cur_team[i].average= temp.average;
    cur_team[i].point=temp.point;
}

void takim_sirala(){

    for(int r=0;r<10;r++){
        for (int i=0;i<9;i++){
            if(cur_team[i+1].point>cur_team[i].point)
                {
                    swap_teams(i,i+1);
                }
        }
    }
   return;
}
int main(int argc, char* argv[]) {

    char takimbir,takimiki;
